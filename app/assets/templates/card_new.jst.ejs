<h5>New Card</h5>

<form>
  <input type="hidden" name="card[list_id]" value="<%= list.get("id") %>">
  
  <label for="card-title-input">Title</label>
  <input type="text" name="card[title]" id="card-title-input">
  
  <label for="card-ord-input">Rank</label>
  <input type="number" step="0.1" name="card[ord]" id="card-ord-input">
  
  <label for="card-description-input">Description</label>
  <textarea name="card[description]" id="card-description-input"></textarea>
    
  <button class="make-card">Submit</button>
</form>