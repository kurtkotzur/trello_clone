<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <h1>Sign In</h1>

    <form action="/session" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <label for="email-input">Email</label>
        <input name="user[email]" type="text" id="email-input" class="form-control">
      </div>
      <div class="form-group">
        <label for="password-input">Password</label>
        <input name="user[password]" type="password" id="password-input" class="form-control"><br>
      </div>
      <input type="submit" value="Submit" class="btn btn-primary button"><br>
    </form>
    <button type="button" class="btn btn-success button" id="guest-button">Guest sign in</button>
    <br><br>
    <a href="/users/new">Sign up</a>
  </div>
</div>